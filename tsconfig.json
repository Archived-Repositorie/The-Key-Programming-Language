{
  "compilerOptions": {
    "target": "esNext",
    "module": "commonjs",
    "declaration": true,
    "noImplicitAny": true,
    "removeComments": true,
    "experimentalDecorators": true,
    "rootDir": ".",
    "sourceMap": true,
    "listFiles": true,
    "newLine": "LF",
    "noEmitOnError": true
  },
  "exclude": [
    "bin",
    "build",
    "node_modules"
  ],
}
